@model IEnumerable<WebApplication1.Models.Exam>

<h2>Sınav Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sınav Adı</th>
            <th>Süre (dakika)</th>
            <th>Açıklama</th>
            <th>Geçme Notu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Name</td>
                <td>@exam.Duration</td>
                <td>@exam.Description</td>
                <td>@exam.PassingScore</td>
            </tr>
        }
    </tbody>
</table>
